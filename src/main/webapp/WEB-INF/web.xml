<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- HelloWorldGet Servlet -->
    <servlet>
        <servlet-name>HelloWorldGet</servlet-name>
        <servlet-class>com.example.testing.demo.HelloWorldFormGetServlet</servlet-class>
    </servlet>

    <!-- HelloWorldPost Servlet -->
    <servlet>
        <servlet-name>HelloWorldPost</servlet-name>
        <servlet-class>com.example.testing.demo.HelloWorldFormPostServlet</servlet-class>
    </servlet>

    <!-- HelloWorld Servlet for both GET and POST-->
    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>com.example.testing.demo.HelloWorldFormServlet</servlet-class>
    </servlet>

    <!-- Mapping between servlets and URIs -->
    <servlet-mapping>
        <servlet-name>HelloWorldGet</servlet-name>
        <url-pattern>/helloworld-get</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HelloWorldPost</servlet-name>
        <url-pattern>/helloworld-post</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/helloworld</url-pattern>
    </servlet-mapping>

</web-app>